        {
            "name": "Attach to browser",
            "type": "chrome",
            "request": "attach",
            "port": 9222
        },
        {
            "name": "Debug",
            "type": "chrome",
            "request": "launch",
            "webRoot": "${workspaceRoot}",
            "url": "http://localhost:3000",
            // "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "userDataDir": "${workspaceRoot}",
            "sourceMaps": true,
            //"preLaunchTask": "chrome --remote-debugging-port=9222",
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "node_modules/**"
            ]
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "name": "http://127.0.0.1:3000/index.html",
            "request": "launch",
            "url": "http://127.0.0.1:3000/index.html"
        }
    ]
}
